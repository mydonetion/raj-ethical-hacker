name: Deploy to GitHub Pages 🚀

on:
  push:
    branches:
      - main  # অথবা তুমি যেই ব্রাঞ্চে কাজ করো

permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository 📦
        uses: actions/checkout@v4

      - name: Setup Pages 🛠️
        uses: actions/configure-pages@v3

      - name: Upload site 📤
        uses: actions/upload-pages-artifact@v2
        with:
          path: ./  # তোমার static ফাইল যেখানে আছে

      - name: Deploy 🚀
        uses: actions/deploy-pages@v2
